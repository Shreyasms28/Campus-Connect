<!DOCTYPE html>

<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Student Events Portal</title>
<link rel="stylesheet" href="/style.css">
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen font-inter">

<!-- Header -->
<header id="header" class="bg-indigo-700 text-white shadow-md p-4 sticky top-0 z-50">
    <div class="container mx-auto flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <img id="college-logo" src="https://via.placeholder.com/150x50.png?text=College+Logo" alt="College Logo" class="h-10 rounded-full">
            <h1 class="text-2xl font-bold">Campus Events</h1>
        </div>
        <a href="/login" class="bg-white text-indigo-700 font-semibold py-2 px-4 rounded-full shadow-lg transition-transform transform hover:scale-105">Logout</a>
    </div>
</header>

<!-- Main Content Container -->
<main class="flex-grow container mx-auto p-4 md:p-6">
    
    <!-- Search and Filter Bar -->
    <div class="mb-6 flex flex-col md:flex-row items-center space-y-4 md:space-y-0 md:space-x-4">
        <input id="search-input" type="text" placeholder="Search events..." class="w-full md:flex-grow p-3 rounded-lg border-2 border-gray-300 focus:outline-none focus:border-indigo-500 transition-all duration-300">
        <select id="event-filter" class="w-full md:w-auto p-3 rounded-lg border-2 border-gray-300 focus:outline-none focus:border-indigo-500 transition-all duration-300">
            <option value="all">All Events</option>
            <option value="hackathon">Hackathons</option>
            <option value="workshop">Workshops</option>
            <option value="tech-talk">Tech Talks</option>
            <option value="fest">Fests</option>
        </select>
    </div>

    <!-- Events List -->
    <div id="events-list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Event cards will be dynamically inserted here by JavaScript -->
        <p class="col-span-full text-center text-gray-500 text-lg">Loading events...</p>
    </div>

    <!-- Message Box (for alerts) -->
    <div id="message-box" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center p-4 hidden z-[100]">
        <div class="bg-white p-6 rounded-xl shadow-2xl max-w-sm w-full transform transition-all duration-300 scale-95 opacity-0">
            <p id="message-text" class="text-center font-semibold text-gray-800 mb-4"></p>
            <button onclick="hideMessage()" class="w-full bg-indigo-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-indigo-600 transition-colors duration-300">OK</button>
        </div>
    </div>

</main>

<!-- Footer -->
<footer id="footer" class="bg-gray-800 text-gray-300 py-4 mt-6">
    <div class="container mx-auto text-center">
        <p>&copy; 2025 Campus Event Management</p>
    </div>
</footer>

<script src="/js/studentScript.js"></script>

</body>
</html>